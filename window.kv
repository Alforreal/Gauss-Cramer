<GitButton@Button>:
    background_color: (0, 0, 0, 0)
    on_press: root.change_image()
    on_release: root.change_image_off()
    Image:
        id: gitimage
        source: 'icons/Github_mark.png'
        center_x: self.parent.center_x
        center_y: self.parent.center_y

