#:kivy 2.0

<RoundButtonvar@Button>:
    background_color: (0, 0, 0, 0)
    background_normal: ''
    canvas.before:
        Color:
            id: main_color
            rgba:  (84/255, 70/255, 219/255, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [30]

<RoundButtonBack@Button>:
    background_color: (0, 0, 0, 0)
    background_normal: ''
    canvas.before:
        Color:
